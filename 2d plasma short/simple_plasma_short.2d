simulation
{
}
!--------the node configuration for this simulation--------
node_conf
{
  node_number(1:1) = 1,
  if_periodic(1:1) = .false.,
}
!----------spatial grid----------
grid
{
  nx_p(1:2) = 6000, 3500, ! number of grid cells per direction
  coordinates = "cartesian",
}
!----------time step and global data dump timestep number----------
time_step
{
  dt = 0.51,
  ndump = 5,
}
restart
{
  ndump_fac = 0,
  if_restart=.false.,
  if_remold=.true.,
}
!----------spatial limits of the simulations----------
!(note that this includes information about
! the motion of the simulation box)
space
{
  xmin(1:2) = -1000.000e0, -300.0e0,
  xmax(1:2) = 5000.0e0, 2000.0e0,
  if_move(1:2) = .false.,.false.,
}
!----------time limits ----------
time
{
  tmin = 0.0e0,
  tmax = 2.0e0,
}
!----------field solver set up-----------------
el_mag_fld
{
 ext_fld = 'none',
 !type_ext_b(1:3) = 'uniform', 'uniform', 'uniform',
 !ext_b0(1:3) = 0.0, 0.0, 0.0,
}
!----------boundary conditions for em-fields ----------
emf_bound
{
  type(1:2,1) = 'open', 'open',
  type(1:2,2) = 'open', 'open',
  vpml_bnd_size = 15,
  vpml_diffuse(1:2,1) = .true., .true.,
  vpml_diffuse(1:2,2) = .true., .true.,
}
diag_emf
{
  ndump_fac = 1,
  reports = "e1","e2","e3",!"b1","b2","b3",
}

!----------number of particle species----------
particles
{
  num_species = 1,
  interpolation = "cubic",
}
!----------information for ELECTRONS----------
species
{
  name = "electrons",
  num_par_max = 8000000,
  rqm = -1.0d0,
  q_real = -1.0d0,
  num_par_x(1:2) = 1, 1, ! number of particles per grid cell per direction
}
udist
{
  uth(1:3) = 0.0d0 , 0.0d0 , 0.0d0 ,
  ufl(1:3) = 0.0d0 , 0.0d0 , 0.0d0 ,
}
profile
{
  density = 0.4,
  
  profile_type = "math func",
  
  math_func_expr = "(if((2.38*x1 + 1714 - x2 > 0) && (-1.32*x1 + 2912 - x2 > 0),
	 if(-7.90*x1 + 3460 - x2 > 0,
	 0.5 * tanh(0.005*(2.38*x1 - 652 - x2)) + 0.5,
	 0.5 * tanh(0.005*(-1.32*x1 + 827 - x2)) + 0.5),
	 0)

 + if((-1.32*x1 + 1775 - x2 < 0) && (2.38*x1 - 4723 - x2 < 0),
	 if(-7.90*x1 + 13431 - x2 > 0,
	 0.5 * tanh(0.005*(-(-1.32*x1 + 2239 - x2))) + 0.5,
	 0.5 * tanh(0.005*(-(2.38*x1 - 4047 - x2))) + 0.5),
	 0)

 + if((-2.38*x1 + 5275 - x2 < 0) && (1.32*x1 - 3755 - x2 < 0),
	 if(7.90*x1 - 19752 - x2 < 0,
	 0.5 * tanh(0.005*(-(-2.38*x1 + 5951 - x2))) + 0.5,
	 0.5 * tanh(0.005*(-(1.32*x1 - 3292 - x2))) + 0.5),
	 0)

 + if((1.32*x1 - 4240.5 - x2 > 0) && (-2.38*x1 + 10021.9 - x2 > 0),
	 if(7.90*x1 - 29723 - x2 < 0,
	 0.5 * tanh(0.005*(1.32*x1 - 4704 - x2)) + 0.5,
	 0.5 * tanh(0.005*(-2.38*x1 + 9346 - x2)) + 0.5),
	 0))

*step(x2 + 400)*step(-x2 + 700)",

   

}
!----------boundary conditions for this species----------
spe_bound
{
  type(1:2,1) = 'open', 'open',
  type(1:2,2) = 'open', 'open',
}
diag_species
{
  !ndump_fac = 0,
  !ndump_fac_ene = 0,
  ndump_fac_pha = 300,

  ps_xmin(1:2) = -1000.0, -300.0,
  ps_xmax(1:2) = 5000.0, 2000.0,
  ps_nx(1:2) = 6000, 3000,

  ps_pmin(1:3) = -10.0, -10.0, -10.0,
  ps_pmax(1:3) = 10.0, 10.0, 10.0,
  ps_np(1:3) = 100, 100, 100,
  if_ps_p_auto(1:3) = .false., .false., .false.,

  phasespaces = "x2x1"!, "x2", "x1",
}
collisions
{
}

!----------information for lazer pulse----------
zpulse
{ 
  a0 = 0.001,                  ! use a normalized peak value of 1
  omega0 = 1.0,              ! use a normalized central frequency of 1.0
  pol = 0.0d0,              ! use a 0 deg polarization angle

  chirp_order = 1,           ! add a linear chirp to the pulse
  chirp_coefs(1) = -0.0003,      ! the wavenumber will increase 0.5 per unit length
  !chirp_coefs(2) = 0.0001,

  propagation = "forward",   ! launch the pulse with forward propagation (default)
  
  !lon_type = "polynomial",   ! use a polynomial longitudinal envelope
  !lon_rise = 200.0,            ! use a 6.4 1/wp rise time
  !lon_flat = 300.0,            ! hold the peak value for 0.0 length (i.e. don't hold it)
  !lon_fall = 200.0,            ! use a 6.4 1/wp fall time. The pulse will have a total length of 12.8
  !lon_start = 0.0,           ! start the pulse exactly at the rigth edge of the simulation 

  lon_type = "gaussian",
  lon_duration = 200.0,
  lon_x0 = -400.0,
  lon_range = 1000.0,

  per_type = "gaussian",
  per_center = 0.0,
  per_w0 = 50,
  per_focus = 0.0,
}

!----------SMOOTHING FOR CURRENTS------------------------------------------------------------
